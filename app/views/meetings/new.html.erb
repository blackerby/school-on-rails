<h1>Add a Class to <%= @teacher.name%>'s Schedule</h1>
<div class="form-group">
  <%= form_with(model: [@teacher, @meeting]) do |f| %>
    <%= render 'shared/errors', object: @meeting %>
    <div class="mb-3">
      <%= f.label :course_title, class: 'form-label' %>
      <%= f.text_field :course_title, class: 'form-control me-2', placeholder: 'Enter a Course Title' %>
    </div>
    <div class="mb-3">
      <%= f.label :block, class: 'form-label' %>
      <%= f.collection_select :block_id, Block.order(:name), :id, :name, { prompt: 'Select a Block' }, { class: 'form-select' } %>
    </div>
    <div class="mb-3">
      <%= f.label :classroom, class: 'form-label' %>
      <%= f.collection_select :classroom_id, Classroom.all, :id, :name, { prompt: 'Select a Classroom' }, { class: 'form-select' } %>
    </div>
    <%= f.submit class: 'mt-3 btn btn-primary'%>
    <%= link_to 'Cancel', @teacher, class: 'mt-3 btn' %>
  <% end %>
</div>
