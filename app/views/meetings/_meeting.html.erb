<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= meeting.course_title %></h5>
    <h6 class="card-subtitle mb-2 text-muted">
      <%= link_to meeting.block.name, meeting.block, data: { turbo_frame: '_top' } %> Block in
      <%= link_to meeting.classroom.name, meeting.classroom, data: { turbo_frame: '_top' } %>
    </h6>
    <%= link_to 'Edit', edit_teacher_meeting_path(@teacher, meeting), data: { turbo_frame: '_top' } %>
    <%= link_to 'Delete', teacher_meeting_path(@teacher, meeting), 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{meeting.course_title}?",
                        turbo_frame: '_top' } %>
  </div>
</div>
