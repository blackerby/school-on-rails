<%= form_with(model: teacher) do |f| %>
  <%= render 'shared/errors', object: teacher %>
  <div class="form-group">
    <div class="mb-3">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>
    <div class="mb-3">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :department, class: 'form-label' %>
      <%= f.collection_select :department_id, Department.all, :id, :name, {include_blank: true}, { class: 'form-select' } %>
    </div>
    <%= f.submit class: 'mt-3 btn btn-primary'%>
  </div>
<% end %>
