<%= form_with(model: teacher) do |f| %>
  <%= render 'shared/errors', object: teacher %>
  <div class="form-group">
    <div class="mb-3">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>
    <div class="mb-3">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :department, class: 'form-label' %>
      <%= f.collection_select :department_id, Department.all, :id, :name, {}, { class: 'form-select' } %>
    </div>
    <!-- rewrite to use collections_check_boxes helper -->
    <%= f.label :schedule, class: 'form-label' %>
    <div class="mb-3">
      <%= f.collection_check_boxes(:block_ids, Block.order(:name), :id, :name) do |b| %>
        <div class="form-check form-check-inline">
          <%= b.label(class: 'form-check-label') { b.check_box(class: 'form-check-input') + b.text + ' Block' } %>
        </div>
      <% end %>
    </div>
    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
