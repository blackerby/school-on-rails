<%= form_with(model: teacher) do |f| %>
  <%= render 'shared/errors', object: teacher %>
  <div class="form-group">
    <div class="mb-3">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control', autofocus: true %>
    </div>
    <div class="mb-3">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :department, class: 'form-label' %>
      <%= f.collection_select :department_id, Department.all, :id, :name, {}, { class: 'form-select' } %>
    </div>
    <%= f.label :schedule, class: 'form-label' %>
    <div class="row row-cols-sm-auto g-3 align-items-center">
      <%= f.fields_for :meetings do |m| %>
        <div class="col">
          <%= m.label :block, class: 'form-label' %>
          <%= m.collection_select :block_id, Block.order(:name), :id, :name, {}, { class: 'form-select' } %>
          <%= m.label :classroom, class: 'form-label' %>
          <%= m.collection_select :classroom_id, Classroom.all, :id, :name, {}, { class: 'form-select' } %>
        </div>
      <% end %>
    </div>
    <%= f.submit class: 'mt-3 btn btn-primary'%>
  </div>
<% end %>
