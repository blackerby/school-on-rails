<div class="col-lg-12 text-center">
  <h1><%= @teacher.first_name %> <%= @teacher.last_name %></h1>
  <div class="container text-center">
    <%= mail_to @teacher.email %>
  </div>
  <div class="container text-center">
    <%= link_to 'Edit', edit_teacher_path(@teacher) %>
    <%= link_to 'Delete', @teacher, 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{@teacher.first_name} #{@teacher.last_name}?" } %>
  </div>
  <h4 class="m-3 text-center">
    <% if @department %>
      <%= link_to @department.name, department_path(@department) %>
    <% else %>
      No Department Assigned
    <% end %>
  </h4>
</div>
