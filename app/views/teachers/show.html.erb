<div class="col-lg-12 text-center">
  <h1><%= @teacher.name %></h1>
  <div class="container text-center">
    <%= mail_to @teacher.email %>
  </div>
  <div class="container text-center">
    <%= link_to 'Edit', edit_teacher_path(@teacher) %>
    <%= link_to 'Delete', @teacher, 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{@teacher.first_name} #{@teacher.last_name}?" } %>
  </div>
  <div class="container text-center">
    <%= link_to 'Add Class', new_teacher_meeting_path(@teacher) %>
  </div>
</div>
<h4 class="m-3 text-center">
  <%= link_to_department(@department) %>
</h4>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3>Teaching</h3>
      <table class="table table-striped mt-3">
        <tr>
          <th>Teacher</th>
          <th>Classroom</th>
          <th>Course Title</th>
          <th>Actions</th>
        </tr>
        <% @meetings.each do |meeting| %>
          <tr>
            <td>
              <%= link_to meeting.block.name, meeting.block %>
            </td>
            <td>
              <%= link_to meeting.classroom.name, meeting.classroom %>
            </td>
            <td>
              <%= meeting.course_title %>
            </td>
            <td>
              <%= link_to 'Edit', edit_teacher_meeting_path(@teacher, meeting) %>
              <%= link_to 'Delete', teacher_meeting_path(@teacher, meeting), 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{meeting.block.name} from #{@teacher.name}'s schedule?" } %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h3>Free</h3>
      <%= render 'shared/table', objects: @free %>
    </div>
  </div>
</div>
