<div class="col-lg-12 text-center">
  <h1><%= @teacher.name %></h1>
  <div class="container text-center">
    <%= mail_to @teacher.email %>
  </div>
  <% if user_signed_in? %>
    <div class="container text-center" id="actions">
      <%= link_to 'Edit', edit_teacher_path(@teacher) %>
      <%= link_to 'Delete', @teacher, 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{@teacher.first_name} #{@teacher.last_name}?" } %>
    </div>
    <div class="container text-center">
      <%= turbo_frame_tag @teacher do %>
        <%= link_to 'Add Class', new_teacher_meeting_path(@teacher) %>
      </div>
    <% end %>
  <% end %>
</div>
<h4 class="m-3 text-center">
  <%= link_to_department @department %>
</h4>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3>Teaching</h3>
      <div id="classes">
        <%= render @meetings %>
      </div>
    </div>
    <div class="col">
      <h3>Free</h3>
      <div id="free">
        <%= render 'shared/free_cards', objects: @free %>
      </div>
    </div>
  </div>
</div>
