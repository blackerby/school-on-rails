<div class="col-lg-12 text-center">
  <h1><%= @teacher.name %></h1>
  <div class="container text-center">
    <%= mail_to @teacher.email %>
  </div>
  <div class="container text-center">
    <%= link_to 'Edit', edit_teacher_path(@teacher) %>
    <%= link_to 'Delete', @teacher, 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{@teacher.first_name} #{@teacher.last_name}?" } %>
    <div class="container">
      <% if @schedule.id.nil? %>
        <%= link_to 'Create Schedule', new_teacher_schedule_path(@teacher) %>
      <% else %>
        <%= link_to 'Edit Schedule', edit_teacher_schedule_path(@teacher, @teacher.schedule) %>
      <% end %>
    </div>
  </div>
  <h4 class="m-3 text-center">
    <%= link_to_department(@department) %>
  </h4>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3>Teaches During</h3>
      <table class="table table-striped mt-3">
        <% @meetings.each do |meeting| %>
          <tr>
            <td>
              <%= link_to meeting.block.name, meeting.block %> in Classroom
              <%= link_to meeting.classroom.name, meeting.classroom %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h3>Free During</h3>
      <%= render 'shared/table', objects: @free %>
    </div>
  </div>
</div>
