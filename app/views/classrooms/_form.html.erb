<%= form_with(model: classroom) do |f| %>
  <%= render 'shared/errors', object: classroom %>
  <div class="form-group">
    <div class="mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>
    <div class="mb-3">
      <%= f.label :building, class: 'form-label' %>
      <%= f.collection_select :building_id, Building.order(:name), :id, :name,
              { prompt: 'Select a Building' },
              { class: 'form-select',
                data: { turbo_frame: '_top' } } %>
    </div>
    <%= f.submit class: 'mt-3 btn btn-primary'%>
    <%= link_to 'Cancel', classrooms_path, class: 'mt-3 btn' %>
  </div>
<% end %>
