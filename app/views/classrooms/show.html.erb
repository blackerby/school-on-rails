<div class="col-lg-12 text-center">
  <h1>Classroom <%= @classroom.name %></h1>
  <div class="container text-center">
    <%= link_to 'Edit', edit_classroom_path(@classroom) %>
    <%= link_to 'Delete', @classroom, 
                data: { turbo_method: :delete, 
                        turbo_confirm: "Are you sure you want to delete #{ @classroom.name }?" } %>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h3>Occupied</h3>
      <table class="table table-striped mt-3">
        <% @meetings.each do |meeting| %>
          <tr>
            <td>
              <%= link_to meeting.block.name, meeting.block %> by
              <%= link_to meeting.teacher.name, meeting.teacher %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col">
      <h3>Open</h3>
      <%= render 'shared/table', objects: @free %>
    </div>
  </div>
</div>
