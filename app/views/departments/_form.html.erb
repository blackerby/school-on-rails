<%= form_with(model: department) do |f| %>
  <%= render 'shared/errors', object: department %>
  <div class="form-group">
    <div class="mb-3">
      <%= f.label :name, class: 'form-label' %>
      <%= f.text_field :name, class: 'form-control', autofocus: true %>
    </div>
  </div>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>
